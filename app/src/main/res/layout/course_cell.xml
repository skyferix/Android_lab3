<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>

    <RelativeLayout
            android:layout_width="413dp"
            android:layout_height="86dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="#A39A9A"
            app:layout_constraintCircleRadius="1dp">

        <TextView
                android:text="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/course" android:layout_alignParentStart="true"
                android:layout_marginStart="52dp" android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true" android:layout_marginBottom="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="52dp" android:textSize="24sp"/>
        <TextView
                android:text="owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/owner" android:layout_alignParentStart="true"
                android:layout_marginStart="178dp" android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true" android:layout_marginBottom="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="178dp" android:textSize="24sp"/>

        <TextView
                android:text="date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/startDate"
                android:textSize="24sp"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" android:layout_marginTop="32dp" android:layout_marginRight="33dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="33dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>