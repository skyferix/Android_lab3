<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Courses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textSize="48sp"
            tools:layout_editor_absoluteY="52dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="613dp" tools:layout_editor_absoluteY="117dp" tools:layout_editor_absoluteX="1dp"
            android:gravity="center">
        <TextView
                android:text="title"
                android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/course_title" android:layout_weight="1"
                android:gravity="center_vertical" android:textSize="20sp"/>
        <TextView
                android:text="owner"
                android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/course_owner" android:layout_weight="1"
                android:gravity="center_vertical" android:textSize="20sp"/>
        <TextView
                android:text="startDate"
                android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/startDate" android:layout_weight="1"
                android:gravity="center_vertical" android:textSize="20sp"/>
        <TextView
                android:text="endDate"
                android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/endDate" android:layout_weight="1"
                android:gravity="center_vertical" android:textSize="20sp"/>
        <TextView
                android:text="description"
                android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/description" android:layout_weight="2"
                android:gravity="center_vertical" android:textSize="20sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>